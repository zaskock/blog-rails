<%=form_for :article, url: article_path(@article), method: :put do |f|%>

	<%if @article && @article.errors.any?%>

		<p>
			<ul>
				<%@article.errors.full_messages.each do |m|%>
					<li><%=m%></li>
				<%end%>
			</ul>
		</p>

	<%end%>

	<p>
		<%=f.label :title%></br>
		<%=f.text_field :title%>
	</p>	
	<p>
		<%=f.label :text%></br>
		<%=f.text_area :text%>
	</p>
	<p>
		<%=f.submit%></br>
	</p>
<%end%>