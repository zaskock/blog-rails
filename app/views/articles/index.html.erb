<%@articles.each do |a|%>
<h2><%=a.title%></h2>
<p><%=a.text%></p>
<%=link_to "Show", article_path(a)%> |
<%=link_to "Edit", edit_article_path(a)%> |
<%=link_to "Delete", article_path(a), method: :delete, data: {confirm: "This will remove the data permanently! Do you want to proceed?"}%>
<hr>


<%end%>