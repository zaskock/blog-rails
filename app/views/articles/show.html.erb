<h2>
<%=@article.title%>
</h2>
<p>
<%=@article.text%>
</p>
<hr>

<%@article.comments.each do |c|%>
<p style="font:75%"><b><%=c.author%></b> said at <%=c.created_at%>:</p>
<p><%=c.body%></p>
<hr>
<%end%>

<p>
<%= form_for([@article, @article.comments.build]) do |f| %>
		<p>
		<%=f.label :author%></br>
		<%=f.text_field :author%>
	</p>
	<p>
		<%=f.label :text%></br>
		<%=f.text_area :body%>
	</p>
	<p>
		<%=f.submit%></br>
	</p>
<%end%>
</p>